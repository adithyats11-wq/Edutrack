<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Top Blue Header -->
    <FrameLayout
        android:id="@+id/mainLayoutt"
        android:layout_width="match_parent"
        android:layout_height="354dp"
        tools:context=".MainActivity">

        <!-- Main Vertical Layout -->
        <LinearLayout
            android:id="@+id/linearMain"
            android:layout_width="match_parent"
            android:layout_height="343dp"
            android:orientation="vertical">

            <!-- Top Blue Header -->

            <!-- Profile Section (below overlapped image) -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="173dp"
                android:background="#0F4D99">

                <TextView
                    android:id="@+id/appTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="50dp"
                    android:shadowColor="#20B9CA"
                    android:shadowDx="6"
                    android:shadowDy="9"
                    android:shadowRadius="3"
                    android:text="Edutrack"
                    android:textColor="@android:color/white"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/subTitle"
                    android:layout_width="281dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/appTitle"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="1dp"
                    android:shadowColor="#46ABAF"
                    android:shadowDx="9"
                    android:shadowDy="8"
                    android:shadowRadius="3"
                    android:text="Smart attendance, smart teaching"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="italic" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="211dp"
                android:background="@drawable/ethhbg"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="60dp"> <!-- add space for overlapped image -->

                <TextView
                    android:id="@+id/teacherNameText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="WELCOME BACK"
                    android:textAlignment="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="8dp"/>

            </LinearLayout>
        </LinearLayout>

        <!-- Overlapping Profile Image -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="144dp"
            android:layout_height="141dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginTop="130dp"
            android:background="@drawable/profile_circle"
            android:scaleType="centerCrop"
            android:src="@drawable/ttchr" />

    </FrameLayout>


    <!-- Class Buttons -->
    <TextView
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Classes"
        android:shadowColor="#939595"
        android:shadowDy="4"
        android:shadowDx="4"
        android:shadowRadius="2"
        android:textSize="22dp"
        android:textColor="#0F4C98"
        android:textStyle="bold" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:padding="16dp">

        <!-- 1st Year Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardYear1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:foreground="@drawable/effect"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="188dp"
                android:layout_height="150dp"
                android:background="#C6EAFD"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/graduation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:shadowColor="#2B2D30"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="1st Year"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 2nd Year Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardYear2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:backgroundTint="#FFFFFF"
            android:clickable="true"
            android:foreground="@drawable/effect"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="155dp"
                android:background="#C4E8FB"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/grad1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:shadowColor="#2B2D30"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="1"
                    android:text="2nd Year"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <!-- Bottom Navigation -->
    <androidx.cardview.widget.CardView
        android:foreground="@drawable/effect"
        android:clickable="true"
        android:id="@+id/cardYear3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="191dp"
            android:layout_height="137dp"
            android:background="#C6EAFD"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/graduated" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:shadowColor="#2B2D30"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="1"
                android:text="3rd year"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="50dp"
        android:background="#E3F2FD"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="32dp"
        android:weightSum="2">

        <!-- Profile Button -->
        <LinearLayout
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="#000"
                android:textSize="12sp" />
        </LinearLayout>


        <!-- Exit Button -->
        <LinearLayout
            android:id="@+id/btnExit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/logout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exit"
                android:textColor="#F44336"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>