<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YearActivity">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:background="#0F4C98"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="34dp"
            android:layout_height="33dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@id/backBtn"
            android:text="Edutrack"
            android:shadowColor="#20B9CA"
            android:shadowDx="6"
            android:shadowDy="9"
            android:shadowRadius="3"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_name"
            android:layout_alignStart="@id/app_name"
            android:text="smart attendance, smart teaching"
            android:textColor="@android:color/white"
            android:shadowColor="#20B9CA"
            android:shadowDx="6"
            android:shadowDy="9"
            android:shadowRadius="3"
            android:textSize="16sp"
            android:textStyle="italic"/>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="66dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="0dp"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ttchr" />
    </RelativeLayout>


    <!-- 1st Year Heading -->
    <TextView
        android:id="@+id/yearTitle"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:background="@drawable/ethhbg"
        android:gravity="center"
        android:paddingTop="16dp"
        android:text="1ST YEAR"
        android:textColor="#000000"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="275dp"
        android:layout_height="28dp"
        android:layout_gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="-50dp"
        android:shadowColor="#939595"
        android:shadowDx="4"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:text="Attendance Dashboard"
        android:textColor="#0F4C98"
        android:textSize="24dp"
        android:textStyle="bold" />

    <!-- Card Grid -->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="match_parent"
        android:layout_height="202dp"
        android:layout_marginTop="70dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:padding="16dp"
        android:rowCount="2"
        android:rowOrderPreserved="false">

        <!-- Card 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMarkAttendance"
            android:layout_width="172dp"
            android:layout_height="156dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:foreground="@drawable/effect"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#C6EAFD"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/attendance" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Mark\nAttendance"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardAttendanceReport"
            android:layout_width="172dp"
            android:layout_height="156dp"
            android:layout_margin="8dp"
            android:clickable="true"
            android:foreground="@drawable/effect"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="#C6EAFD"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/attreport" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:text="Attendance\nReport"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </GridLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewLeaveReason"
        android:layout_width="172dp"
        android:layout_height="156dp"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:foreground="@drawable/effect"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#C6EAFD"
            android:orientation="vertical">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/absence" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="View Leave"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>